<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/roundlayout"
    android:padding="12dp"
    android:layout_height="match_parent"
    tools:context=".Student_Activity_Nav_Fragments.Fragment_Student_Nav_Home">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/important_links"
            android:layout_height="wrap_content"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:text="Important Link"
            app:backgroundTint="@color/teal_700" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Anti-Ragging"
            android:id="@+id/anti_ragging"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:layout_marginLeft="8dp"
            app:backgroundTint="@color/teal_700" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Education 4.0"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:id="@+id/piet_education"
            app:backgroundTint="@color/teal_700"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Fee Payment"

            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:id="@+id/fee_payment"
            android:layout_marginLeft="8dp"
            app:backgroundTint="@color/teal_700"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Library"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:id="@+id/piet_library"
            app:backgroundTint="@color/teal_700"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Piet Website"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:layout_marginLeft="8dp"
            android:id="@+id/piet_web"
            app:backgroundTint="@color/teal_700"/>
    </LinearLayout>

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/home_box_shapes"
       android:orientation="vertical">
          <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             android:orientation="horizontal">
            <ImageView
               android:layout_width="wrap_content"
               android:layout_height="40dp"
               android:background="@color/teal_700"
               android:src="@drawable/event_icon"/>
            <TextView
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:text="     Upcoming Events"
               android:textColor="@color/black"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
               android:paddingTop="8dp"
                android:background="@color/teal_700"/>

           </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:text="No Event Found."
            android:textColor="@color/white"
            android:paddingTop="15dp"
            android:gravity="left"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:paddingLeft="5dp"
            android:shadowRadius="1.6" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/home_box_shapes"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@color/teal_700"
                android:src="@drawable/event_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="     Important Notifications"
                android:textColor="@color/black"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:paddingTop="8dp"
                android:background="@color/teal_700"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="Last Date To Submit Project is 5-June-21 !"
            android:textColor="@color/white"
            android:paddingTop="15dp"
            android:gravity="left"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:paddingLeft="5dp"
            android:shadowDy="1.3"
            android:shadowRadius="1.6" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clg_address"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:paddingTop="15dp"
        android:shadowColor="#000000"
        android:background="@drawable/home_box_shapes"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:paddingLeft="6dp"
        android:gravity="left"/>

</LinearLayout>
</ScrollView>